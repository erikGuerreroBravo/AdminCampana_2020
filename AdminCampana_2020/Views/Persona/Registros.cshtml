}

<LINK REL=StyleSheet HREF="~/Content/css/table-responsive.css" TYPE="text/css" MEDIA=screen>
<div class="bs-container" style="min-height:960px;">
    <section class="content-header">
        <h1>
            Datos Personales
            <small>(Consultar)</small>
