@model AdminCampana_2020.ViewModels.PersonaVM

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <noscript>
        <meta http-equiv="refresh" content="0;URL=@Url.Action("NoScript", "Error")" />
    </noscript>
    <div class="bs-container" style="min-height:960px;">
        <section class="content-header">
            <h1>
                Datos Personales
                <small>(Actualizar)</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"> <i class="fa fa-dashboard"></i> Inicio </a></li>
                <li> <a href="#">Actualizar</a></li>
                <li class="active"> Datos Personales </li>
            </ol>
        </section>
        <br />
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="box box-success">
                    <div class="box-header with-border">
                        <h5 class="box-title">
                            <label class="text-success emailtitleletter">
                                <i class="text-success fa fa-graduation-cap"></i>
                                Octavio Vargas Soto
                            </label>&nbsp;
                        </h5>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="form-group">
                            <div class="col-sm-8 col-md-8 col-lg-8">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.Id)
                                <div class="form-group">
                                    <label>Nombre:&nbsp;&nbsp;</label>
                                    @Html.EditorFor(model => model.StrNombre, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                    @Html.ValidationMessageFor(model => model.StrNombre, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label>Apellido Paterno:&nbsp;&nbsp;</label>
                                    @Html.EditorFor(model => model.StrApellidoPaterno, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                    @Html.ValidationMessageFor(model => model.StrApellidoPaterno, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label>Apellido Materno:&nbsp;&nbsp;</label>
                                    @Html.EditorFor(model => model.StrApellidoMaterno, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                    @Html.ValidationMessageFor(model => model.StrApellidoMaterno, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label>Email:&nbsp;&nbsp;</label>
                                    @Html.EditorFor(model => model.StrEmail, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.StrEmail, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label>Telefono Celular:&nbsp;&nbsp;</label>
                                    @Html.EditorFor(model => model.TelefonoVM.StrNumeroCelular, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.TelefonoVM.StrNumeroCelular, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-10 col-md-2">
                                        <input type="submit" value="Guardar" class="btn btn-sm btn-success" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

<div>
    @Html.ActionLink("Lista de Registros", "Registros")
</div>
