                                   webGrid.Column("Eliminar",format:@<text><a href="" class="btn btn-sm btn-new-delete btn-danger"
                                                                              onclick="DeleteME('@item.Id')">Borrar</a></text>)


                                                     })

                </div>
            </div>
        </div>
    </div>
</div>


