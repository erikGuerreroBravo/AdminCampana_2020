@model AdminCampana_2020.ViewModels.PersonaVM

@{
    //ViewBag.Title = "Registro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="bs-container" style="min-height:960px;">
        <section class="content-header">
            <h1>
                Datos Personales
                <small>(Agregar)</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"> <i class="fa fa-dashboard"></i> Inicio </a></li>
                <li> <a href="#">captura</a></li>
                <li class="active"> Datos Personales </li>
            </ol>
        </section>
        <br />
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="box box-success">
                    <div class="box-header with-border">
                        <h5 class="box-title">
                            <label class="text-success emailtitleletter">
                                <i class="text-success fa fa-graduation-cap"></i>
                                Octavio Vargas Soto

                            </label>&nbsp;

                        </h5>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="form-group">
                            <div class="col-sm-6 col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label>Nombre:&nbsp;&nbsp;</label>
                                    @Html.TextBoxFor(model => model.StrNombre, new { @class = "form-control input-sm", placeholder = "El Nombre", id = "StrNombre", required = "", patern = "^[a-záéíóúñA-ZÁÉÍÓÚÑ ]+$" })
                                    @Html.ValidationMessageFor(model => model.StrNombre, "", new { @class = "text-danger" })

                                </div>
                                <div class="form-group">
                                    <label>Apellido Paterno:&nbsp;&nbsp;</label>
                                    @Html.TextBoxFor(model => model.StrApellidoPaterno, new { @class = "form-control input-sm", placeholder = "El Apellido Paterno", id = "StrApellidoPaterno", required = "", patern = "^[a-záéíóúñA-ZÁÉÍÓÚÑ ]+$" })
                                    @Html.ValidationMessageFor(model => model.StrApellidoPaterno, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label>Apellido Materno:&nbsp;&nbsp;</label>
                                    @Html.TextBoxFor(model => model.StrApellidoMaterno, new { @class = "form-control input-sm", placeholder = "El Apellido Materno", id = "StrApellidoMaterno", required = "", patern = "^[a-záéíóúñA-ZÁÉÍÓÚÑ ]+$" })
                                    @Html.ValidationMessageFor(model => model.StrApellidoMaterno, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label>Email:&nbsp;&nbsp;</label>
                                    @Html.TextBoxFor(model => model.StrEmail, new { @class = "form-control input-sm", placeholder = "Tu Correo", id = "StrEmail", required = "", patern = "^[a-záéíóúñA-ZÁÉÍÓÚÑ ]+$" })
                                    @Html.ValidationMessageFor(model => model.StrEmail, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label>Telefono Celular:&nbsp;&nbsp;</label>
                                    @Html.TextBoxFor(model => model.TelefonoVM.StrNumeroCelular, new { @class = "form-control input-sm", placeholder = "El Número Celular", id = "StrNumeroCelular", required = "", type = "number" })
                                    @Html.ValidationMessageFor(model => model.TelefonoVM.StrNumeroCelular, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label>Calle:&nbsp;&nbsp;</label>
                                    @Html.TextBoxFor(model => model.DireccionVM.StrCalle, new { @class = "form-control input-sm", placeholder = "La Dirección:Calle", id = "StrCalle" })
                                    @Html.ValidationMessageFor(model => model.DireccionVM.StrCalle, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label>Colonia:&nbsp;&nbsp;</label>
                                    @Html.DropDownList("IdColonia", null, new { @class = "form-control input-sm", id = "IdColonia" })
                                </div>
                                <div class="form-group">
                                    <label>Número Interior:&nbsp;&nbsp;</label>
                                    @Html.TextBoxFor(model => model.DireccionVM.StrNumeroInterior, new { @class = "form-control input-sm", placeholder = "La Dirección:Número Interior", id = "StrNumeroInterior" })
                                    @Html.ValidationMessageFor(model => model.DireccionVM.StrNumeroInterior, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label>Número Exterior:&nbsp;&nbsp;</label>
                                    @Html.TextBoxFor(model => model.DireccionVM.StrNumeroExterior, new { @class = "form-control input-sm", placeholder = "La Dirección:Número Exterior", id = "StrNumeroExterior" })
                                    @Html.ValidationMessageFor(model => model.DireccionVM.StrNumeroExterior, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label>Sección:&nbsp;&nbsp;</label>
                                    @Html.DropDownList("IdSeccion", null, new { @class = "form-control input-sm", id = "IdSeccion" })
                                </div>

                                <div class="form-group">
                                    <label>Zona de Color:&nbsp;&nbsp;</label>
                                    @Html.DropDownList("IdZona", null, new { @class = "form-control input-sm", id = "IdZona" })
                                </div>
                                <div class="form-group">
                                    <label>Estrategía:&nbsp;&nbsp;</label>
                                    @Html.DropDownList("IdEstrategias", null, new { @class = "form-control input-sm", id = "IdEstrategias" })
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Guardar" class="btn btn-success" id="btnEnviar" />
                                    @*<a href="@Url.Action("Registro","Persona")" class="btn btn-info">Regresar</a>*@
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>


}

<link href="~/Content/toastr.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.6.3.min.js"></script>
<script src="~/Scripts/toastr.min.js"></script>
<script src="~/Scripts/persona/message-confirmation.js"></script>
